#include <iostream>

using namespace std;
int main(){
    int arr[10],n,ele,i,pos;
    
    cout<< "Enter the size of the array: ";
    cin>> n;
    
    cout<< "Enter "<<n<<" array elements: ";
    for(i = 0; i<n; i++){
        cin>>arr[i];
    }
    cout<<"Enter the position to which you want to insert an element: ";
    cin>> pos;
    cout<< "Enter the element to be inserted at the position "<<pos<<" of the array: ";
    cin>> ele;
    
    for(i=n; i>=pos; i--){
        arr[i]= arr[i-1];
        
    }
    arr[pos-1]= ele;
    n++;
    cout<<"Array after insertion: ";
    for(i=0;i<n;i++){
        cout<< arr[i]<<" ";
    }
    
}
