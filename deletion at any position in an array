#include <iostream>

using namespace std;
int main(){
    int arr[10],n,i,pos;
    
    cout<< "Enter the size of the array: ";
    cin>> n;
    
    cout<< "Enter "<<n<<" array elements: ";
    for(i = 0; i<n; i++){
        cin>>arr[i];
    }
    cout<<"Array: ";
    for(i=0;i<n;i++){
        cout<< arr[i]<<" ";
    }
    
    cout<< "\nEnter the position from which element is to be deleted: ";
    cin>> pos;
    
    for(i=pos-1; i<n-1; i++){
        arr[i]= arr[i+1];
    }

    n--;
    cout<<"Array after deleting the element at position "<<pos<<" : ";
    for(i=0;i<n;i++){
        cout<< arr[i]<<" ";
    }
    
}
