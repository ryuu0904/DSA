#include <iostream>

using namespace std;
int main(){
    int arr[10],n,ele,i;
    
    cout<< "Enter the size of the array: ";
    cin>> n;
    
    cout<< "Enter "<<n<<" array elements: ";
    for(i = 0; i<n; i++){
        cin>>arr[i];
    }
    
    cout<< "Enter the element to be inserted at the beginning of the array: ";
    cin>> ele;
    
    for(i=n; i>0; i--){
        arr[i]= arr[i-1];
        
    }
    arr[0]= ele;
    n++;
    cout<<"Array after insertion: ";
    for(i=0;i<n;i++){
        cout<< arr[i]<<" ";
    }
    
}
