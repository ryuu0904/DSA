#include <iostream>
using namespace std;

int main(){
    int arr[10],n,i,key;
    
    cout<<"Enter the number of elements: ";
    cin>>n;
    
    cout<<"Enter "<<n<<" array elements in ascending order: ";
    for(i =0; i<n; i++){
        cin>>arr[i];
    }
    
    cout<<"Enter the element to be searched: ";
    cin>>key;
    
    int mid,high,low;
    low = 0;
    high= n-1;
    bool found = false;
    while(low<=high){
        mid = (low+high)/2;
        if(arr[mid]==key){
            cout<<"Element found at index "<<mid<<endl;
            found = true;
            break;
        }
        else if(arr[mid]<key){
            low = mid+1;
        }
        else{
            high = mid -1;
        }
    }
    if(found=false){
        cout<<"Element not found!";
    }
}
